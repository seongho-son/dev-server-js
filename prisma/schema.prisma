generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Todos {
  id          Int       @id @default(autoincrement())
  order       Int
  description String    @default("")
  isCompleted Boolean   @default(false)
  startTime   DateTime?
  endTime     DateTime?
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @default(now())

  @@map("todos")
}

model Stores {
  id        Int       @id @default(autoincrement())
  name      String
  type      String
  grade     Int?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())

  @@map("stores")
}

model BlogCategory {
  id      Int    @id @default(autoincrement())
  name    String
  Blogs   Blog?  @relation(fields: [blogsId], references: [id])
  blogsId Int?

  @@map("blog_category")
}

model BlogImage {
  id      Int    @id @default(autoincrement())
  url     String
  Blogs   Blog?  @relation(fields: [blogsId], references: [id])
  blogsId Int?

  @@map("blog_image")
}

model Blog {
  id         Int            @id @default(autoincrement())
  name       String
  subject    String
  body       String
  categories BlogCategory[]
  images     BlogImage[]
  createdAt  String
  thumbnail  String?
  updatedAt  String?
  deletedAt  String?

  @@map("blog")
}
